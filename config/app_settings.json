{
  "camera": {
    "device_index": 0,
    "resolution": [
      640,
      480
    ],
    "fps": 30
  },
  "recognition": {
    "confidence_threshold": 0.85,
    "detection_sensitivity": 0.7,
    "cooldown_ms": 500,
    "gesture_hold_time_ms": 300
  },
  "model": {
    "default_model": "gesture_cnn",
    "auto_load_last": true,
    "use_gpu": true
  },
  "dataset": {
    "base_path": "datasets",
    "auto_backup": true,
    "backup_interval_hours": 24,
    "min_images_per_gesture": 50
  },
  "training": {
    "epochs": 20,
    "batch_size": 32,
    "learning_rate": 0.001,
    "val_split": 0.2
  },
  "ui": {
    "theme": "light",
    "language": "en",
    "show_fps": true,
    "show_landmarks": true
  }
}